      "item": [
        {
          "name": "List all users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-user-role", "value": "admin" }
            ],
            "url": {
              "raw": "{{base_url}}/admin/users",
              "host": ["{{base_url}}"],
              "path": ["admin", "users"]
            }
          }
        },
        {
          "name": "List all attendance records",
